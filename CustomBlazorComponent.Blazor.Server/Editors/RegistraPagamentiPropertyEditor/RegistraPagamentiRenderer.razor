@using CustomBlazorComponent.Blazor.Server.Components.RegistraPagamenti
@using CustomBlazorComponent.Module.BusinessObjects.NonPersistent

<DxTagBox Data="@Data" TData="PersonDTO" TValue="PersonDTO"
          TextFieldName="@nameof(PersonDTO.Name)"
          @bind-Values="@ComponentModel.Persona.Selected"
          CssClass="cw-480" />


@code {
        [Parameter]
    public RegistraPagamentiModel ComponentModel { get; set; }
    public static RenderFragment Create(RegistraPagamentiModel componentModel) => @<RegistraPagamentiRenderer ComponentModel=@componentModel />;
    
    IEnumerable<PersonDTO> Data { get; set; }
    IEnumerable<PersonDTO> Values { get; set; }

    protected override Task OnInitializedAsync()
    {
        Data = new List<PersonDTO>()
        {
            new PersonDTO("Person 1", 1),
            new PersonDTO("Person 2", 2),
            new PersonDTO("Person 3", 3),
            new PersonDTO("Person 4", 4),
            new PersonDTO("Person 5", 5),
            new PersonDTO("Person 6", 6),
            new PersonDTO("Person 7", 7),

        };
        Values = new List<PersonDTO>();
        return base.OnInitializedAsync();
    }
}
